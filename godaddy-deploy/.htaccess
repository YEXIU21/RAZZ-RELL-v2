<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Handle CORS Pre-flight
    <IfModule mod_headers.c>
        Header always set Access-Control-Allow-Origin "https://razzrelevents.vercel.app"
        Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Header always set Access-Control-Allow-Headers "X-Requested-With, Content-Type, X-Token-Auth, Authorization, X-XSRF-TOKEN, X-CSRF-TOKEN, Accept"
        Header always set Access-Control-Allow-Credentials "true"
        
        # Handle OPTIONS method
        RewriteCond %{REQUEST_METHOD} OPTIONS
        RewriteRule ^(.*)$ $1 [R=200,L]
    </IfModule>

    # Remove /public from URLs
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule> 